<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.bme.kocsis.richard.animelist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="hu.bme.kocsis.richard.animelist.AnimeListApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name="hu.bme.kocsis.richard.animelist.ui.animelist.AnimeListActivity"
            android:label="@string/title_activity_anime_list"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hu.bme.kocsis.richard.animelist.ui.details.DetailsActivity"
            android:label="@string/details" />
        <activity android:name="hu.bme.kocsis.richard.animelist.ui.favourites.FavouritesActivity"  android:label="@string/view_favourites"></activity>
    </application>

</manifest>
